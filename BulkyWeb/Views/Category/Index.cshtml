@model List<Category>

<div class="card shadow border-0 mt-3">
    <div class="card-header m-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary-emphasis py-2">Category List</h2>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row pt-3 pb-2">
                <div class="col-6">
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-outline-dark btn-sm mt-1">
                        <i class="bi bi-plus"></i>Create New Category
                    </a>
                </div>
            </div>
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="table-light">
                        <th>
                            Category Name
                        </th>
                        <th>
                            Display Order
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr class="table-dark">
                            <td>@obj.Name</td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                <div class="w-75" role="group">
                                    @* <a asp-controller="Category" asp-action="Edit" class="btn btn-outline-light btn-sm mx-2"> *@
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="text-light mx-2" style="text-decoration:none;">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    @* <a asp-controller="Category" asp-action="Delete" class="btn btn-outline-danger btn-sm mx-2 "> *@
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="text-light mx-2" style="text-decoration:none;">
                                        <i class="bi bi-trash3-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
